            <HBox.margin>
               <Insets left="10.0" top="20.0" />
            </HBox.margin>
            <font>
               <Font size="10.0" />
            </font>
         </Button>
         <Button focusTraversable="false" mnemonicParsing="false" text="-">
            <font>
               <Font size="10.0" />
            </font>
            <HBox.margin>
               <Insets left="5.0" top="20.0" />
            </HBox.margin>
         </Button>
         <ImageView fitHeight="42.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/client.png" />
            <HBox.margin>
               <Insets bottom="8.0" left="40.0" top="8.0" />
            </HBox.margin>
         </ImageView>
         <ComboBox focusTraversable="false" prefWidth="90.0">
            <HBox.margin>
               <Insets left="20.0" top="15.0" />
            </HBox.margin>
         </ComboBox>
      </HBox>
   </top>
   <left>
      <ListView id="onlineUsers" fx:id="onlineUsers" focusTraversable="false" prefHeight="400.0" prefWidth="250.0" BorderPane.alignment="CENTER" />
   </left>
