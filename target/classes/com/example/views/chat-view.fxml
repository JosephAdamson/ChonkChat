            <ListView id="chatWindow" fx:id="chatWindow" focusTraversable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <HBox id="textInputConsole" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <Button focusTraversable="false" mnemonicParsing="false" text="emoji">
                  <HBox.margin>
                     <Insets left="20.0" top="35.0" />
                  </HBox.margin>
               </Button>
               <Button focusTraversable="false" mnemonicParsing="false" text="file">
                  <HBox.margin>
                     <Insets left="15.0" top="35.0" />
                  </HBox.margin>
               </Button>
               <HBox id="textInputContainer" prefHeight="100.0" prefWidth="380.0">
                  <children>
                     <TextArea id="textInput" fx:id="textInput" focusTraversable="false" onKeyPressed="#onTextInputEnter" prefHeight="50.0" prefWidth="370.0">
